<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#81D4FA"
    tools:context=".Rounds2">

    <ImageButton
        android:id="@+id/imageViewScissors2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="35dp"
        android:background="#FFFFFF"
        android:src="@drawable/scissors"
        android:scaleType="centerCrop"
        android:onClick="scissor2" />

    <TextView
        android:id="@+id/textViewP2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="TextView"
        android:background="#FFFF8D"
        android:textSize="24sp"/>

    <ImageButton
        android:id="@+id/imageViewPaper2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerInParent="true"
        android:background="#FFFFFF"
        android:src="@drawable/paper"
        android:scaleType="centerCrop"
        android:onClick="paper2" />

    <ImageButton
        android:id="@+id/imageViewStone2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="35dp"
        android:background="#FFFFFF"
        android:src="@drawable/rock"
        android:scaleType="centerCrop"
        android:onClick="stone2" />

    <TextView
        android:id="@+id/textViewP2Select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:text="Select your move"
        android:textSize="18sp" />
</RelativeLayout>