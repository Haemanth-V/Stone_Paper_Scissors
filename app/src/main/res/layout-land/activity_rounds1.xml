<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#81D4FA"
    tools:context=".Rounds1">

    <ImageButton
        android:id="@+id/imageViewScissors1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="35dp"
        android:background="#FFFFFF"
        android:src="@drawable/scissors"
        android:scaleType="centerCrop"
        android:onClick="scissor" />

    <ImageButton
        android:id="@+id/imageViewPaper1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerInParent="true"
        android:background="#FFFFFF"
        android:src="@drawable/paper"
        android:scaleType="centerCrop"
        android:onClick="paper" />

    <ImageButton
        android:id="@+id/imageViewStone1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="35dp"
        android:background="#FFFFFF"
        android:src="@drawable/rock"
        android:scaleType="centerCrop"
        android:onClick="stone" />

    <TextView
        android:id="@+id/textViewSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="Select your move"
        android:textSize="20sp" />
</RelativeLayout>